<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Search Item with Barcode
        </h1>
        <ol class="breadcrumb">
            <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Find Item</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-12" style="float: inherit;">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Search Form</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/dashboard/searchitem" method="post" class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="barcode" class="col-sm-2 control-label">Barcode</label>
                            <div class="col-sm-8">
                                <input required type="text" class="form-control" id="barcode" name="barcode"
                                       placeholder="Enter the Barcode">
                            </div>
                            <button class="btn btn-info">Search Item</button>
                        </div>
                        {{#if item}}
                            <hr>
                            <div class="found_items">
                                {{#each item}}
                                    <div class="col-sm-6">
                                        <div class="inside_item">
                                            <div class="form-group">
                                                <label for="name" class="col-sm-12 control-label">Item Name</label>
                                                <div class="col-sm-12">
                                                    <input readonly type="text" class="form-control" id="name"
                                                           value="{{this.ITEMNAME}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="code" class="col-sm-12 control-label">Item Code</label>
                                                <div class="col-sm-12">
                                                    <input readonly type="text" class="form-control" id="code"
                                                           value="{{this.ITEMCODE}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="warehouse" class="col-sm-12 control-label">Warehouse</label>
                                                <div class="col-sm-12">
                                                    <input readonly type="text" class="form-control" id="warehouse"
                                                           value="{{this.WAREHOUSENAME}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="pendingpurchaceorders" class="col-sm-12 control-label">Pending
                                                    Purchase
                                                    Orders</label>
                                                <div class="col-sm-12">
                                                    <input readonly type="text" class="form-control"
                                                           id="pendingpurchaceorders"
                                                           value="{{this.PENDINGPURCHASEORDERS}}">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="pendingsalesorders" class="col-sm-12 control-label">Pending
                                                    Sales
                                                    Orders</label>
                                                <div class="col-sm-12">
                                                    <input readonly type="text" class="form-control"
                                                           id="pendingsalesorders"
                                                           value="{{this.PENDINGSALESORDERS}}">
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label for="balance" class="col-sm-12 control-label">Balance</label>
                                                <div class="col-sm-12">
                                                    <input readonly type="text" class="form-control" id="balance"
                                                           value="{{this.BALANCE}}">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        {{/if}}
                    </div>
                </form>
            </div>
            <!-- /.box -->
            <!-- general form elements disabled -->
        </div>
        <!--/.col (right) -->
    </section>
    <!-- /.content -->
</div>